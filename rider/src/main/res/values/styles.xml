<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/md_grey_800</item>
    </style>


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accent_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/accent_pink</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/accent_green</item>
    </style>
</resources>