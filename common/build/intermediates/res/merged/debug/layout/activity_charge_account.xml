        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_charge_account_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/text_current_balance"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/current_balance" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/md_grey_300"
            android:src="@drawable/divider_8dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/select_payment_method" />

        <com.savvyapps.togglebuttonlayout.ToggleButtonLayout
            android:id="@+id/payment_toggle_layout"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:toggleMode="even"
            app:menu="@menu/payment_methods" />

